<div id="section-exterior" style="display: none;">
    <div class="section-title">Exterior</div>

    <div class="form-group">
        <label for="exteriorDamage">Rust, Dent or Damage to Exterior:</label>
        <select id="exteriorDamage" class="form-control">
            <option value="No">No</option>
            <option value="Yes">Yes</option>
        </select>
        <div id="exteriorDamageDetails" style="display: none;">
            <label for="exteriorDamageNotes">Explain in notes:</label>
            <textarea id="exteriorDamageNotes" class="form-control" maxlength="1000" placeholder="Enter details about the damage"></textarea>
            <label for="exteriorDamageImages">Attach images:</label>
            <input type="file" id="exteriorDamageImages" class="form-control" accept="image/*" multiple>
        </div>
    </div>

    <div class="form-group">
        <label for="oilLeak">Oil Leak in Suspension:</label>
        <select id="oilLeak" class="form-control">
            <option value="No">No</option>
            <option value="Yes">Yes</option>
        </select>
    </div>

    <div class="form-group">
        <label for="exteriorSummary">Overall Summary:</label>
        <textarea id="exteriorSummary" class="form-control" maxlength="1000" placeholder="Enter overall summary of the exterior"></textarea>
    </div>

    <div class="form-group">
        <label for="exteriorImages">Attach images:</label>
        <input type="file" id="exteriorImages" class="form-control" accept="image/*" multiple>
    </div>

    <div class="form-actions">
        <button type="button" onclick="showSection('section-battery')">Back: Battery</button>
        <button type="button" onclick="showSection('section-brakes')">Next: Brakes</button>
    </div>
</div>
