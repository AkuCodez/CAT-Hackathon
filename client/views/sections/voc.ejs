<div id="section-voice-of-customer" style="display: none;">
    <div class="section-title">Voice of Customer</div>

    <div class="form-group">
        <label for="customerFeedback">Any Feedback from Customer:</label>
        <textarea id="customerFeedback" class="form-control" placeholder="Enter customer feedback"></textarea>
    </div>

    <div class="form-group">
        <label for="customerImages">Images Related to Issues Discussed with Customer:</label>
        <input type="file" id="customerImages" class="form-control" accept="image/*" multiple>
    </div>

    <div class="form-actions">
        <button type="button" onclick="showSection('section-engine')">Back: Engine</button>
        <button type="submit">Submit</button>
    </div>
</div>
